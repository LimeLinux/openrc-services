pidfile="/run/teamviewerd.pid"
command="/opt/teamviewer/tv_bin/teamviewerd"
command_args="-d"
command_donotify="true"

depend() {
        need dbus localmount

}

start_pre() {
	einfo "teamviewer Remote Control Application start"
    /usr/bin/teamviewer --daemon start 2>&1

}

stop_post() {
	einfo "teamviewer Remote Control Application stop"
    /usr/bin/teamviewer --daemon stop 2>&1
}
